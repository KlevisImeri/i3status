general {
        colors = true
        interval = 5
        color_good = "#00FF00"
        color_degraded = "#FFFF00"
        color_bad = "#FF0000"
}

order += "ipv6"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "cpu_usage"
order += "cpu_temperature 0" 
order += "memory"
order += "disk /"
order += "tztime local"

wireless _first_ {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"
}

ethernet _first_ {
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery all {
        format = "%status %percentage"
        status_chr = "âš¡"
        status_bat = "ðŸ”‹"
        status_unk = "?"
        status_full = "FULL"
        low_threshold = 15
        threshold_type = "percentage"
}

disk "/" {
        format = "%used - %total DISK"
        low_threshold = 10 
}

cpu_usage {
        format = "%usage CPU" 
        degraded_threshold = 75
        max_threshold = 90
}

cpu_temperature 0 {
        format = "%degrees Â°C"
        max_threshold = 85
}


memory {
        format = "%used - %available MEM"
        threshold_degraded = "2G"
        threshold_critical = "1G"
        format_degraded = "%used - %available MEM"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}
